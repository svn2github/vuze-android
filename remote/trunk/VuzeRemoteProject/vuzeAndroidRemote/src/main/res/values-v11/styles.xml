<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

	<style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
		<item name="android:fitsSystemWindows">true</item>
		<item name="android:windowActionBar">false</item>
		<item name="android:windowActionModeOverlay">true</item>
	</style>

	<style name="AppBaseThemeDark" parent="@style/Theme.Leanback">
		<item name="android:windowOverscan" tools:targetApi="jelly_bean_mr2">false</item>
		<item name="android:fitsSystemWindows">true</item>
		<item name="android:windowActionBar">false</item>
		<item name="android:windowActionModeOverlay">true</item>
		<item name="actionBarSize">@dimen/abc_action_bar_default_height_material</item>
	</style>

	<style name="sidelist_header">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">42dp</item>
		<item name="android:alpha">0.6</item>
		<item name="android:layout_marginBottom">1dp</item>
		<item name="android:background">@drawable/sidelist_header_selector</item>
		<item name="android:elevation" tools:targetApi="lollipop">10dp</item>
		<item name="android:focusable">true</item>
		<item name="android:orientation">horizontal</item>
		<item name="android:tag">sideheader</item>
	</style>

</resources>