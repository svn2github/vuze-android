<com.vuze.android.remote.CheckableFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
																							xmlns:tools="http://schemas.android.com/tools"
																							android:layout_width="match_parent"
																							android:layout_height="wrap_content"
																							android:background="@drawable/sidelist_content_selector"
																							android:gravity="center_vertical"
																							android:minHeight="48dp"
																							android:orientation="vertical"
																							android:paddingLeft="10dp"
																							android:paddingRight="5dp">


	<ImageView
		android:id="@+id/sidesort_row_image"
		android:layout_width="wrap_content"
		android:layout_height="fill_parent"
		android:layout_gravity="right"
		android:layout_marginBottom="2dp"
		android:layout_marginTop="2dp"
		android:alpha="0.6"
		tools:src="@drawable/ic_arrow_upward_white_24dp"
		android:scaleType="fitCenter"/>

	<com.vuze.android.remote.AutoResizeTextView
		android:id="@+id/sidesort_row_text"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_gravity="center_vertical"
		android:ellipsize="end"
		android:gravity="center_vertical"
		android:maxLines="2"
		android:paddingRight="5dp"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:textColor="@color/list_sidebar_content_fg"
		tools:text="Sort Item"/>

</com.vuze.android.remote.CheckableFrameLayout>