<?xml version="1.0" encoding="utf-8"?>
<com.android.music.CheckableRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/list_selector"
	android:padding="10dp"
	android:paddingLeft="0dp" >

    <TextView
    	android:id="@+id/rcmrow_title"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_alignParentLeft="true"
    	android:layout_alignParentTop="true"
    	android:textSize="@dimen/row_title_fontsize" />

    <TextView
    	android:id="@+id/rcmrow_info"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_below="@+id/rcmrow_title" />

    <TextView
    	android:id="@+id/rcmrow_tags"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_alignLeft="@+id/rcmrow_info"
    	android:layout_below="@+id/rcmrow_info"
    	android:layout_marginTop="16dp"
    	android:textAppearance="?android:attr/textAppearanceSmall" />

</com.android.music.CheckableRelativeLayout>