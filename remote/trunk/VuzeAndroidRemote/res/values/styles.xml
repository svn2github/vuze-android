<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
	-->
	<style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
		<item name="actionBarTheme">@style/MyThemeOverlay.AppCompat.Dark.ActionBar</item>
		<!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
		-->
	</style>

	<!--
		This fixes the Popup Menu Dialog that the Hardware Menu button invokes on a submenu.
		With Theme.AppCompat.Light.DarkActionBar, this menu would be white on white
		Something something, MenuDialogHelper.show()
		
		Apparently the menu uses android:textColorSecondary as it's text color, which
		is white.  So change it to black.  This messes up control colors since they
		are based off of android:textColorSecondary, so put them back to white.
		
		Probably other things that use android:textColorSecondary too that are messed up
		but this app doesn't use them.
		
		Maybe the menu items are using a separate item that only references android:textColorSecondary
		but I can't find it in the spagetti xml theme heirarchy.
	-->
	<style name="MyThemeOverlay.AppCompat.Dark.ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

		<!-- Fix? -->
		<item name="android:textColorSecondary">@color/abc_secondary_text_material_light</item>
		<item name="colorControlNormal">@color/abc_secondary_text_material_dark</item>
	</style>

	<!-- Application theme. -->
	<style name="AppTheme" parent="AppBaseTheme">

		<!-- All customizations that are NOT specific to a particular API-level can go here. -->
		<item name="asb_switchStyle">@style/Widget.Holo.CompoundButton.Switch</item>
	</style>

	<style name="AppThemeNoBackground" parent="AppTheme">
		<item name="android:background">@null</item>
		<item name="background">@null</item>
	</style>

	<style name="ShadowStyle">
		<item name="android:paddingLeft">4dp</item>
		<item name="android:paddingBottom">4dp</item>
		<item name="android:textColor">#444</item>
		<item name="android:shadowColor">#80404040</item>
		<item name="android:shadowDx">1</item>
		<item name="android:shadowDy">1</item>
		<item name="android:shadowRadius">1</item>
	</style>

	<!-- Needed for older versions (v7?) -->
	<style name="ActionBarTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
		<item name="android:textColorHighlight">@color/highlighted_text_material_dark</item>
		<item name="android:textColorLink">@color/link_text_material_dark</item>
	</style>

	<!-- Needed for older versions (v7?) -->
	<style name="ActionBarSubTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle.Inverse">
		<item name="android:textColorHighlight">@color/highlighted_text_material_dark</item>
		<item name="android:textColorLink">@color/link_text_material_dark</item>
	</style>

	<bool name="showTorrentDetailsActivity">true</bool>

</resources>