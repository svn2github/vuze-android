<?xml version="1.0" encoding="utf-8"?>
<com.android.music.CheckableRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/list_selector"
	android:paddingBottom="5dp"
	android:paddingLeft="5dp"
	android:paddingRight="5dp"
	android:paddingTop="5dp" >

	<TextView
		android:id="@+id/torrentrow_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_alignParentTop="true"
		android:layout_toRightOf="@+id/torrentrow_progress"
		android:ellipsize="end"
		android:maxLines="4"
		android:text="Torrent Name"
		android:textAppearance="?android:attr/textAppearanceMedium" />

	<ProgressBar
		android:id="@+id/torrentrow_progress"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true"
		android:layout_alignTop="@+id/torrentrow_name"
		android:layout_marginRight="2dp"
		android:indeterminateOnly="false"
		android:max="10000"
		android:maxHeight="500dp"
		android:maxWidth="500dp"
		android:minHeight="90dp"
		android:minWidth="90dp"
		android:progress="8000"
		android:progressDrawable="@drawable/progress_ring" />

	<TextView
		android:id="@+id/torrentrow_info"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignLeft="@+id/torrentrow_name"
		android:layout_below="@+id/torrentrow_name"
		android:layout_toLeftOf="@+id/torrentrow_speed"
		android:text="5 Files, 128MB"
		android:textAppearance="?android:attr/textAppearanceSmall" />

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignBottom="@id/torrentrow_progress"
		android:layout_alignLeft="@id/torrentrow_progress"
		android:layout_alignRight="@id/torrentrow_progress"
		android:layout_alignTop="@id/torrentrow_progress"
		android:gravity="center_vertical"
		android:orientation="vertical" >

		<TextView
			android:id="@+id/torrentrow_progress_pct"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:text="11%"
			android:textAlignment="center"
			android:textAppearance="?android:attr/textAppearanceMedium" />

		<TextView
			android:id="@+id/torrentrow_eta"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:text="1m"
			android:textSize="12sp" />
	</LinearLayout>

	<TextView
		android:id="@+id/torrentrow_state"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignLeft="@+id/torrentrow_info"
		android:layout_below="@+id/torrentrow_info"
		android:layout_toLeftOf="@+id/torrentrow_speed"
		android:text="Torrent State"
		android:textAppearance="?android:attr/textAppearanceSmall" />

	<TextView
		android:id="@+id/torrentrow_tags"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignLeft="@+id/torrentrow_state"
		android:layout_below="@+id/torrentrow_state"
		android:layout_marginTop="1dp"
		android:layout_toLeftOf="@+id/torrentrow_speed"
		android:lineSpacingExtra="1dp" />

	<View
		android:id="@+id/torrentrow_bottom"
		android:layout_width="wrap_content"
		android:layout_height="0dp"
		android:layout_alignLeft="@+id/torrentrow_tags"
		android:layout_below="@id/torrentrow_tags"
		android:layout_toLeftOf="@+id/torrentrow_speed" />

	<LinearLayout
		android:id="@+id/torrentrow_speed"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignBottom="@+id/torrentrow_bottom"
		android:layout_alignParentRight="true"
		android:layout_alignTop="@+id/torrentrow_info"
		android:gravity="bottom"
		android:orientation="vertical" >

		<TextView
			android:id="@+id/torrentrow_upspeed"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="right"
			android:gravity="right"
			android:text="â†‘ 0 kB/s"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:textSize="12sp" />

		<TextView
			android:id="@+id/torrentrow_downspeed"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="right"
			android:gravity="right"
			android:text="0 kB/s"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:textSize="12sp" />
	</LinearLayout>

</com.android.music.CheckableRelativeLayout>