<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/scrollView1"
	android:layout_width="match_parent"
	android:layout_height="wrap_content" >

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center|center_vertical"
		android:orientation="vertical"
		android:padding="16dp" >

		<TextView
			android:id="@+id/profile_nick_label"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:labelFor="@+id/profile_nick"
			android:text="@string/profile_nickname"
			android:textAppearance="?android:attr/textAppearanceMedium" />

		<TextView
			android:id="@+id/profile_nick_sublabel"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/profile_nick_explain"
			android:textAppearance="?android:attr/textAppearanceSmall" />

		<EditText
			android:id="@+id/profile_nick"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/profile_setting_spacer"
			android:ems="10"
			android:hint="@string/profile_nickname"
			android:imeOptions="actionNext"
			android:singleLine="true" >

			<requestFocus />
		</EditText>

		<TextView
			android:id="@+id/profile_ac_label"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:labelFor="@+id/profile_ac"
			android:text="@string/access_code_hint"
			android:textAppearance="?android:attr/textAppearanceMedium" />

		<TextView
			android:id="@+id/profile_ac_sublabel"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/profile_ac_explain"
			android:textAppearance="?android:attr/textAppearanceSmall" />

		<EditText
			android:id="@+id/profile_ac"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/profile_setting_spacer"
			android:ems="10"
			android:hint="@string/access_code_hint"
			android:imeOptions="actionNext"
			android:singleLine="true" />
	</LinearLayout>

</ScrollView>